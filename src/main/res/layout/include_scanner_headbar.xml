<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/left_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:clickable="true"
            android:src="@drawable/ic_menu"
            android:background="@drawable/bg_list_item" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/two_dimension_scanner"
        	android:textColor="@color/text_color"
            android:textSize="@dimen/title"
            android:gravity="center" />

        <ImageView
            android:id="@+id/status_personal_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/status_personal_record"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/scanner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:clickable="true"
            android:src="@drawable/ic_hangout_video"
            android:background="@drawable/bg_list_item" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing_line" />

</LinearLayout>
